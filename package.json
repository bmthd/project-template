{
	"name": "project-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"format:check": "biome format .",
		"format:fix": "biome format --write .",
		"lint:check": "biome lint .",
		"lint:fix": "biome lint . --fix",
		"type:check": "next typegen && bunx @typescript/native-preview --noEmit",
		"spell:check": "cspell . --gitignore --config cspell.config.json",
		"test": "vitest",
    "test:node": "vitest --project node",
    "test:browser": "vitest --project browser",
		"check:all": "bun run-p '*:check'",
		"fix:all": "bun run-s '*:fix'",
		"similarity": "similarity-ts",
		"knip": "bunx knip",
		"prepare": "lefthook install"
	},
	"dependencies": {
		"@next/third-parties": "^16",
		"@t3-oss/env-nextjs": "^0.13",
		"@yamada-ui/react": "^2",
		"next": "^16",
		"react": "^19",
		"react-dom": "^19",
		"remeda": "^2",
		"ts-pattern": "^5",
		"valibot": "^1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2",
		"@types/node": "^24",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5",
		"@vitest/browser-playwright": "^4",
		"@vitest/coverage-v8": "^4",
		"@yamada-ui/cli": "^2",
		"cspell": "^9",
		"eslint": "^9",
		"eslint-config-next": "^16",
		"lefthook": "^2.0.8",
		"npm-run-all2": "^8",
		"typescript": "^5",
		"vitest": "^4",
		"vitest-browser-react": "^2"
	}
}
